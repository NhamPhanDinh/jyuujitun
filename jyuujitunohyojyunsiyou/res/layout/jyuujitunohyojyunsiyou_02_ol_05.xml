<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_bar_menu" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_slide"
            android:contentDescription="@string/image" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/title" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/image"
            android:src="@drawable/colorful_content_image" />

        <ImageButton
            android:id="@+id/btn_showtab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:background="@drawable/btn_colorful_navigation"
            android:contentDescription="@string/image" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btn_bottom"
        android:layout_below="@+id/bg"
        android:background="@drawable/colorful_main_image"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btn_bottom"
        android:layout_below="@+id/bg"
        android:background="#C0F8AD3A"
        android:padding="15dp"
        android:orientation="vertical"
        android:visibility="invisible" >

        <Button
            android:id="@+id/thiso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:text="This is a demo"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Demo "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <GridView
            android:id="@+id/mGridView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:numColumns="3" >
        </GridView>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image"
        android:src="@drawable/colorful_bottom_image" />

</RelativeLayout>